<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - SachOnline</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }
            .imgsachbannhieu{
                width:100px;
            }
        /* Tùy chỉnh phân trang */
        .pagination {
            margin-top: 20px;
            justify-content: center;
        }

            .pagination li a {
                color: #333;
                font-size: 16px;
                padding: 10px 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
                margin: 0 5px;
                transition: all 0.3s ease;
            }

                .pagination li a:hover {
                    background-color: #007bff;
                    color: #fff;
                    border-color: #007bff;
                }

            .pagination li.active a {
                background-color: #007bff;
                color: #fff;
                border-color: #007bff;
            }

            .pagination li.disabled a {
                color: #aaa;
                cursor: not-allowed;
                border-color: #ddd;
            }

            .pagination li a span {
                font-size: 16px;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("SachOnline", "Index", "SachOnline", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "SachOnline", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Thêm SliderPartial -->
    <div class="container">
        @Html.Action("SliderPartial", "SachOnline")
    </div>

    <div class="container">
        <div class="row">
            <!-- Cột trái: ChuDePartial và SachBanNhieuPartial -->
            <div class="col-lg-3 col-md-3 col-sm-4">
                @Html.Action("ChuDePartial", "SachOnline")
                @Html.Action("SachTheoNXBPartial", "SachOnline")
                

            </div>
            <!-- Cột chính: Nội dung từ RenderBody -->
            <div class="col-lg-9 col-md-9 col-sm-8">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>© @DateTime.Now.Year - SachOnline</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>