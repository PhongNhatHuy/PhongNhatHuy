@using (Html.BeginForm("DangKy", "SachOnline", FormMethod.Post))
{
    <table align="center">
        <tr>
            <td>Họ tên:</td>
            <td>@Html.TextBox("HoTen") @Html.ValidationMessage("err1", (string)ViewData["err1"])</td>
        </tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @Html.ValidationMessage("err2", (string)ViewData["err2"])</td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("MatKhau") @Html.ValidationMessage("err3", (string)ViewData["err3"])</td>
        </tr>
        <tr>
            <td>Nhập lại mật khẩu:</td>
            <td>@Html.Password("MatKhauNhapLai") @Html.ValidationMessage("err4", (string)ViewData["err4"])</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email") @Html.ValidationMessage("err5", (string)ViewData["err5"])</td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("DienThoai") @Html.ValidationMessage("err6", (string)ViewData["err6"])</td>
        </tr>
        <tr>
            <td>Ngày sinh:</td>
            <td>@Html.TextBox("NgaySinh", null, new { @type = "date" }) @Html.ValidationMessage("err7", (string)ViewData["err7"])</td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td>@Html.TextBox("DiaChi")</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
                <input type="reset" value="Xóa Thông Tin" />
            </td>
        </tr>
        <tr>
            <td colspan="2">@ViewBag.ThongBao</td>
        </tr>
    </table>
}